# Core; NODE_ENV is either development or production
NODE_ENV=production
PORT=3000

# CORS
# In production, set to your HTTPS domain (no trailing slash), e.g. https://example.com
CORS_ORIGIN_DEVELOPMENT=http://127.0.0.1:8080
CORS_ORIGIN_PRODUCTION=https://itec401-nov5-nf.sgubproject.com

# JWT
JWT_SECRET=change-me-please
TOKEN_TTL_HOURS=2

# Edge header (CloudFront → NGINX → Node)
EDGE_HEADER_NAME=X-Edge-Secret
EDGE_SECRET=change-me-too
EDGE_ENFORCE=true

# Admin bootstrap
ADMIN_DEFAULT_PASSWORD=admin123

# JSON body limits
JSON_BODY_LIMIT=256kb

# Database to use; to add a service, add a new entry to the switch statement in src/services/db.js
DB_PROVIDER=file
DB_FILE_PATH=./data/db.json

# Items
MAX_ITEM_TEXT_LENGTH=200
